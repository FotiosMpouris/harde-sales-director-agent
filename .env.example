# Example environment variables for Hard-E (do NOT commit your real .env)

# OpenAI
OPENAI_API_KEY="your-openai-api-key-here"

# Whisper / TTS providers (if different)
WHISPER_API_KEY="your-whisper-api-key-here"
TTS_PROVIDER="openai"  # or "elevenlabs", etc.
TTS_API_KEY="your-tts-api-key-here"

# AWS
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
HARD_E_S3_BUCKET="your-harde-transcripts-bucket"

# CRM (Leap)
LEAP_API_BASE_URL="https://api.leapcrm.example.com"
LEAP_API_TOKEN="your-leap-api-token"

# Supplier pricing (e.g., ABC Supply)
SUPPLIER_API_BASE_URL="https://api.supplier.example.com"
SUPPLIER_API_KEY="your-supplier-api-key"

# Palantir / Foundry (placeholder)
FOUNDRY_API_BASE_URL="https://foundry.example.com/api"
FOUNDRY_API_TOKEN="your-foundry-api-token"

# Application
HARD_E_ENV="development"  # or "production"
LOG_LEVEL="INFO"
